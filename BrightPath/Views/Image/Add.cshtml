@model BrightPath.ViewModels.AddImageViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">

            <div class="form-horizontal leftMarginDefault">

                <div class="form-group">
                    <div>You image's title</div>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="form-group">
                    <div>The image file</div>
                    <input asp-for="Files" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-primary" value="Add image" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}