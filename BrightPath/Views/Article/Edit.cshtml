@model BrightPath.ViewModels.ViewModelBoth

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.ArticleId" />
            <div class="form-group">
                <label asp-for="Article.ArticleTitle" class="control-label"></label>
                <input asp-for="Article.ArticleTitle" class="form-control" />
                <span asp-validation-for="Article.ArticleTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.desc_mini" class="control-label"></label>
                <input asp-for="Article.desc_mini" class="form-control" />
                <span asp-validation-for="Article.desc_mini" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.desc" class="control-label"></label>
                <input asp-for="Article.desc" class="form-control" />
                <span asp-validation-for="Article.desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleAdress" class="control-label"></label>
                <input asp-for="Article.ArticleAdress" class="form-control" />
                <span asp-validation-for="Article.ArticleAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Articlecoor" class="control-label"></label>
                <input asp-for="Article.Articlecoor" class="form-control" />
                <span asp-validation-for="Article.Articlecoor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleContact" class="control-label"></label>
                <input asp-for="Article.ArticleContact" class="form-control" />
                <span asp-validation-for="Article.ArticleContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>The image file</div>
                <input asp-for="Files" type="file" accept=".jpg,.jpeg,.png" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
