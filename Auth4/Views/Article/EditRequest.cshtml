@model BrightPathDev.ViewModels.EditList

@{
    ViewData["Title"] = "Edit Request";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewModelBoth.Article.ArticleId" />
            <div class="form-group">
                <label asp-for="ViewModelBoth.Article.ArticleTitle" class="control-label"></label>
                <input asp-for="ViewModelBoth.Article.ArticleTitle" class="form-control" />
                <span asp-validation-for="ViewModelBoth.Article.ArticleTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModelBoth.Article.desc_mini" class="control-label"></label>
                <input asp-for="ViewModelBoth.Article.desc_mini" class="form-control" />
                <span asp-validation-for="ViewModelBoth.Article.desc_mini" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModelBoth.Article.desc" class="control-label"></label>
                <input asp-for="ViewModelBoth.Article.desc" class="form-control" />
                <span asp-validation-for="ViewModelBoth.Article.desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModelBoth.Article.ArticleAdress" class="control-label"></label>
                <input asp-for="ViewModelBoth.Article.ArticleAdress" class="form-control" />
                <span asp-validation-for="ViewModelBoth.Article.ArticleAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModelBoth.Article.Articlecoor" class="control-label"></label>
                <input asp-for="ViewModelBoth.Article.Articlecoor" class="form-control" />
                <span asp-validation-for="ViewModelBoth.Article.Articlecoor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModelBoth.Article.ArticleContact" class="control-label"></label>
                <input asp-for="ViewModelBoth.Article.ArticleContact" class="form-control" />
                <span asp-validation-for="ViewModelBoth.Article.ArticleContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>The image file</div>
                <input asp-for="ViewModelBoth.Files" type="file" accept=".jpg,.jpeg,.png" />
            </div>
            <div class="form-group">
                
                <button type="submit" asp-controller="Review" asp-action="CreateEdited" asp-route-id="@Model.ViewModelBoth.Article.ArticleId">Submit Edit Request</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
