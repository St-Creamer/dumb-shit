@page
@model ManageFlagsModel
@{
    ViewData["Title"] = "Manage Flags";
    ViewData["ActivePage"] = ManageNavPages.ManageFlags;
    
    
}

<h1>@ViewData["Title"]</h1>
<form method="post" class="form-horizontal" role="form" asp-controller="Article" asp-action="RemoveFlag" asp-route-fgs="@Model.FGs">
    <button type="submit" class="btn btn-primary" style="color:aliceblue;">clean faulty flags</button>
</form>
<table class="table">
    
    <thead>
        <tr>

            <th>
                User Name
            </th>
           
            <th>
                About
            </th>
    </thead>
    <tbody>
        @foreach(var item in Model.FGs){

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlaggerName)
            </td>

            @if (item.CommentId != null)
            {

                <td>
                    @Html.DisplayFor(modelItem => item.CommentText)
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Article" asp-action="Details" asp-route-id="@item.ArticleId">Check Article</a>
                </td>
            }
            else if (item.ArticleId != null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleId) 
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Article" asp-action="Details" asp-route-id="@item.ArticleId">Check Article</a>
                    
                </td>
            }

        </tr>

       }
    </tbody>
</table>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
